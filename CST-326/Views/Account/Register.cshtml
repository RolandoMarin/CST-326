@model CST_326.Models.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
        <div class="col-lg-6 text-center text-lg-start" style="color:white">
            <h1 class="display-4 fw-bold lh-1 mb-3">Registration Form</h1>
            <p class="col-lg-10 fs-4">
                Please fill out the following information to register.
            </p>
        </div>
        <div class="col-md-10 mx-auto col-lg-6" style="background-color:white; border-radius:20px">
            <div div class="form-header" style="text-align:center; margin-top:10px">
                <h4>Sign up</h4>
            </div>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                <form class="p-4 p-md-5 border rounded-3 bg-light">
                    <div class="form-floating mb-3">
                        <input asp-for="UserName" class="form-control" id="userName" placeholder="JohnDoe">
                        <label for="userName">Username</label>
                        <div style="color:red">
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password">
                        <label for="password">Password</label>
                        <div style="color:red">
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" id="email" placeholder="JohnDoe@John.com">
                        <label for="email">Email Address</label>
                        <div style="color:red">
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="FirstName" class="form-control" id="firstName" placeholder="John">
                        <label for="firstName">First Name</label>
                        <div style="color:red">
                            @Html.ValidationMessageFor(m => m.FirstName)
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="LastName" class="form-control" id="lastName" placeholder="Doe">
                        <label for="lastName">Last Name</label>
                        <div style="color:red">
                            @Html.ValidationMessageFor(m => m.LastName)
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="PhoneNumber" class="form-control" id="phoneNumber" placeholder="123-456-7890">
                        <label for="phoneNumber">Phone Number</label>
                        <div style="color:red">
                            @Html.ValidationMessageFor(m => m.PhoneNumber)
                        </div>
                    </div>

                    <button class="green-btn w-100 btn btn-lg btn-primary" type="submit">Register</button>
                    <div class="my-4"></div>
                </form>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #023430;
    }
</style>
